doctype html
html
  head
    block title
      title Xtremely Easy CMS
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(href='/stylesheets/layout.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,300italic,400italic,600' rel='stylesheet' type='text/css')
  body
    section
      aside: ul
        li: a(href="/add") Add Article
        each article in articles
          li: a(href="#{article.slug}") #{article.title}
      article
        block content
    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js")
    script(type="text/javascript", src="/javascripts/site.js")
