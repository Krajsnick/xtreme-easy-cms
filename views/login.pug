extends layout

block title
  if mdArticle
    title= mdArticle.title
  else
    title Xtreme
    
block content
  if (!authorized)
    form(method="post", action="/login")
      p Username:
        input(type="text", name="username")
      p Password
        input(type="password", name="password")
      p: input(type="submit", value="Login")
