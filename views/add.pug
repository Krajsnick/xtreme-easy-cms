extends layout

block title
  title Add article

block content
  h3 Markdown editor
  if posted
    h4 Article posted
  if error
    h4 Error: #{error}
  if deleted
    h4 Article deleted
  form(id='articleForm', action='', method='post')
    input(type='text', name='title', placeholder='Title')
    input(type='hidden', name='htmlContent')
    div#editor
      p Some text
    input(type='submit' value='Post')
