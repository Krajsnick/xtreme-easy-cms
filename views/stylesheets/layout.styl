rupture.mobile-cutoff = 460px

$linkColor = #e64e49

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font: 16px 'Open Sans', sans
  padding-top: 2.5em

a
  text-decoration: none
  color: lc = $linkColor
  position: relative
  display: inline-block
  &:hover:before
    transform: scale(1, 1)
  &::before
    content: ''
    position: absolute
    left: 0
    bottom: 0px
    width: 100%
    height: 3px
    background: lighten(lc, 45%)
    transition: all 0.3s ease
    transform: scale(0, 1)
    transform-origin: left

h1, h2, h3, h4, h5, h6
  font-weight: 300

h1
  font-size: 1.68em

pre
  padding: 15px
  background: rgba(250, 250, 250, 1)
  border: solid 1px #afadad
  line-height: 1.5em
  overflow: auto
  white-space:pre
  word-wrap: normal
  code
    border: none
    background: none
code
  background: col = #e7f4e2
  border: solid 1px darken(col, 20%)
  padding: 1px

.top-menu
  position: fixed
  top: 0
  width: 100%
  height: 2.5em
  background: rgba(250, 250, 250, 0.9)
  box-shadow: 0 0 15px 0 rgb(164, 164, 164)
  color: white
  z-index: 300
  .menu-links
    margin-top: 0.5em
    margin-left: 1.5em
    margin-right: 1.5em

section
  center(960px)

aside
  col(1/3)
  +mobile()
    stack()
    line-height: 2em
  ul
    list-style: none
  a
    max-width: 100%
    overflow: hidden
    text-overflow: ellipsis
    text-transform: uppercase
    white-space: nowrap
    &.add-article
      font-weight: bold

.fade-away
  transform: scale(3)
  opacity: 0

  transition: transform ease 0.8s, opacity ease 0.6s 0.2s

article
  col(2/3)
  +mobile()
    stack()
    padding: 0 3%
  position: relative
  padding-right: 1.3em
  p
    line-height: 1.5em
  img
    width: 100%
  .delete-link
    position: absolute
    top: 1em
    right: 1.5em
    background: rgba($linkColor,0.08)
    border: solid 1px $linkColor
    border-radius: 3px
    padding: 5px
    z-index: 100
    &:hover
      background: rgba($linkColor,0.15)

form>input
  width: 100%
  font-size: 1em
  margin-bottom: 1em
  &[type='submit']
    background: col = #43cd66
    border: outset 2px darken(col, 20%)
    color: white
    margin-top: 1em
    text-transform: uppercase
    &:active
      border-style: inset

textarea.markdown-edit
  resize: none
  width: 100%
  height: 550px
  font-size: 1em
  background: #fef6f6
  border: solid 1px #f1974d
  transition: all 0.2s ease
  &:focus
    background: #d7d3d3

#editor .ql-editor
  font: 16px 'Open Sans', sans

.article-title
  border-bottom: solid 2px $linkColor

.error-header
  color: col = #f76565
