rupture.mobile-cutoff = 460px

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font: 16px 'Open Sans', sans

a
  text-decoration: none
  color: lc = #e64e49
  position: relative
  display: inline-block
  height: 26px
  &:hover:before
    transform: scale(1, 1)
  &::before
    content: ''
    position: absolute
    left: 0
    bottom: 0px
    width: 100%
    height: 3px
    background: lighten(lc, 45%)
    transition: all 0.3s ease
    transform: scale(0, 1)
    transform-origin: left

section
  center(960px)
  h1
    font-size: 1.68em

aside
  col(1/3)
  +mobile()
    stack()
  ul
    list-style: none
  a
    text-transform: uppercase
    white-space: nowrap

article
  col(2/3)
  +mobile()
    stack()

form>input
  width: 95%
  font-size: 1em
  &[type='submit']
    background: col = #43cd66
    border: outset 2px darken(col, 20%)
    color: white
    text-transform: uppercase
    &:active
      border-style: inset

textarea.markdown-edit
  resize: none
  width: 95%
  height: 550px
  font-size: 1em
  background: #fef6f6
  border: solid 1px #f1974d
  transition: all 0.2s ease
  &:focus
    background: #5c5c5c
    color: white

.article-title
  border-bottom: solid 2px #e64e49

.error-header
  color: col = #f76565
