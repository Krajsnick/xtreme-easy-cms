rupture.mobile-cutoff = 460px

$linkColor = #e64e49

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font: 16px 'Open Sans', sans
  background: linear-gradient(90deg, #f9f7c8, #f7dbec)

a
  text-decoration: none
  color: lc = $linkColor
  position: relative
  display: inline-block
  height: 26px
  &:hover:before
    transform: scale(1, 1)
  &::before
    content: ''
    position: absolute
    left: 0
    bottom: 0px
    width: 100%
    height: 3px
    background: lighten(lc, 45%)
    transition: all 0.3s ease
    transform: scale(0, 1)
    transform-origin: left

pre, code
  white-space: pre-wrap

section
  center(960px)
  h1
    font-size: 1.68em

aside
  col(1/3)
  +mobile()
    stack()
    line-height: 2em
  ul
    list-style: none
  a
    text-transform: uppercase
    white-space: nowrap

article
  col(2/3)
  +mobile()
    stack()
    line-height: 1.25em
    padding: 0 3%
  line-height: 1
  position: relative
  transition: transform ease-in-out 0.4s
  img
    width: 100%
  #delete-button
    position: absolute
    top: 40px
    right: 10px

form>input
  width: 95%
  font-size: 1em
  &[type='submit']
    background: col = #43cd66
    border: outset 2px darken(col, 20%)
    color: white
    text-transform: uppercase
    &:active
      border-style: inset

textarea.markdown-edit
  resize: none
  width: 95%
  height: 550px
  font-size: 1em
  background: #fef6f6
  border: solid 1px #f1974d
  transition: all 0.2s ease
  &:focus
    background: #d7d3d3

.article-title
  border-bottom: solid 2px $linkColor

.error-header
  color: col = #f76565
